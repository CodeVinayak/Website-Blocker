{
  "manifest_version": 3,
  "name": "Website Blocker",
  "version": "1.0.0",
  "description": "Block selected websites.",
  "icons": { 
    "16": "Images/16.png",
    "48": "Images/48.png",
    "128": "Images/128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*", "*://*.instagram.com/*", "*://*.youtube.com/*"],
      "js": ["blocker.js"]
    }
  ]
}